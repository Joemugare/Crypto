# Create a proper .gitignore file
echo "# Python
__pycache__/
*.py[cod]
*$py.class
*.so
.Python
build/
develop-eggs/
dist/
downloads/
eggs/
.eggs/
lib/
lib64/
parts/
sdist/
var/
wheels/
*.egg-info/
.installed.cfg
*.egg
MANIFEST

# Django
*.log
local_settings.py
db.sqlite3
db.sqlite3-journal

# Environment variables
.env
.venv
env/
venv/
ENV/
env.bak/
venv.bak/

# IDE
.vscode/
.vs/
*.swp
*.swo
*~

# OS
.DS_Store
.DS_Store?
._*
.Spotlight-V100
.Trashes
ehthumbs.db
Thumbs.db

# Static files
/staticfiles/
/static/
/media/

# Logs
logs/
*.log" > .gitignore

# Add the .gitignore
git add .gitignore

# Remove tracked files that should be ignored
git rm -r --cached .vs/ tracker/__pycache__/ crypto_tracker/__pycache__/ logs/ staticfiles/js/node_modules/
git rm --cached db.sqlite3 .env

# Commit the cleanup
git commit -m "Add .gitignore and remove cached files that should be ignored"